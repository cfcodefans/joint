<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yy-MM-dd HH:mm:ss} %-5p %c{2} %x%mcList - %m%n"/>
        </Console>

        <RollingFile name="joint.amqp"
                     filename="./logs/joint-amqp.log"
                     ignoreExceptions="false"
                     bufferedIO="true"
                     filePattern="./logs/joint-amqp-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="%d{yy-MM-dd HH:mm:ss} %-5p %c{2} %x%mcList - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="INFO" >
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="joint.amqp" />
        </Root>
        <Logger name="consumer-dispatcher" level="INFO"  additivity="true">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="joint.amqp" />
        </Logger>
    </Loggers>
</Configuration>